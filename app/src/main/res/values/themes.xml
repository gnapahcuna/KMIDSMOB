    <style name="PinTheme" parent="Theme.AppCompat.Light">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/round_button_pin</item>
        <item name="android:layout_margin">@dimen/dimen_margin_pin</item>
        <item name="android:textSize">@dimen/dimen_font_size_pin</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="fontFamily">@font/sukhumvitset_medium</item>
        <item name="android:layout_width">@dimen/dimen_size_pin</item>
        <item name="android:layout_height">@dimen/dimen_size_pin</item>
    </style>

    <style name="DeletePinTheme" parent="Theme.AppCompat.Light">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/round_pin_del</item>
        <item name="android:layout_margin">@dimen/dimen_margin_pin</item>
        <item name="android:textSize">@dimen/dimen_font_size_pin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/dimen_size_pin</item>
        <item name="android:layout_height">@dimen/dimen_size_pin</item>
        <item name="android:padding">@dimen/dimen_margin_pin</item>
    </style>

    <style name="PassPinTheme" parent="Theme.AppCompat.Light">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/round_pin</item>
        <item name="android:layout_margin">@dimen/dimen_margin_pass_pin</item>
        <item name="android:layout_width">@dimen/dimen_size_pass_pin</item>
        <item name="android:layout_height">@dimen/dimen_size_pass_pin</item>
    </style>


